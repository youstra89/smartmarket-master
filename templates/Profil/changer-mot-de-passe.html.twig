{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}



{% block title user.username ~ ' | Changer mot de passe compte Smart Market' %}



{% block notifications %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}


{% block body %}
  <div class="fh5co-narrow-content">
    <h1 class=""><span>Changement de mot de passe</span></h1>
    <p class="uk-text-center"></p>
    <h2>Changer mot de passe : <strong>{{ user.username }}</strong><br> </h2>
    <div class="uk-grid">
      <div class="uk-width-1-4@s">
        <strong>Dernière modification du mot de passe</strong><br>
        {% if user.pwdChangedAt is empty %}
          <p>Jamais modifié</p>
        {% else %}
          {{ user.pwdChangedAt|date('d-m-y à H:i') }}
        {% endif %}
      </div>
    </div><br>
    {{ form_start(form) }}
      <fieldset class="uk-fieldset">
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="uk-width-1-3@s">
            {{ form_row(form.password, { 'attr': {'class': 'form-control'} }) }}
          </div>
          <br>
          <div class="uk-width-1-3@s">
            {{ form_row(form.new_password, { 'attr': {'class': 'form-control'} }) }}
          </div>
          <div class="uk-width-1-3@s">
            {{ form_row(form.new_password1, { 'attr': {'class': 'form-control'} }) }}
          </div>
        </div><br>
      </fieldset><br>
      {{ form_rest(form) }}
      <button class="btn btn-info btn-sx">{{ button|default('Enregistrer') }}</button>
    {{ form_end(form) }}

  </div>
{% endblock %}


{% block javascripts %}
{% endblock %}
