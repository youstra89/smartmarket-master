{% extends 'base.html.twig' %}


{% block title %}Modification de type de client - {{ customertype.type }}{% endblock %}


{% block notifications %}{% endblock %}


{% block body %}
  <h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">Modification du type de client <strong>{{ customertype.type }}</strong> </h2>
  <a href="javascript:history.back()" class="btn-sm btn-primary">Retour</a><br><br>
  {{ include('CustomerType/_customertype.html.twig', {button: 'Editer'}) }}
{% endblock %}


{% block javascript %}
  <script>
    function submitForm(btn) {
      // disable the button
      btn.disabled = true;
      // submit the form    
      btn.form.submit();
    }
  </script>
{% endblock %}