{% extends 'base.html.twig' %}


{% block title %}Modification des information de l'entreprise {{ info.nom }} {% endblock %}


{% block notifications %}{% endblock %}


{% block body %}
  <a href="javascript:history.back()" class="btn btn-primary">Retour</a><br><br>
  <h2 class="fh5co animate-box" data-animate-effect="fadeInLeft">Modification des information de l'entreprise <strong>{{ info.nom }}</strong></h2>
  {{ include('Informations/_info.html.twig') }}
  <div class="col-md-4">
    <img src="{{ asset('uploads/images/' ~ info.logo) }}" alt="" style="max-width: 500px; height: auto">
  </div>
{% endblock %}


{% block javascript %}
  <script>
    function submitForm(btn) {
        // disable the button
        btn.disabled = true;
        // submit the form    
        btn.form.submit();
    }
  </script>
{% endblock %}