{% extends 'base-admin.html.twig' %}


{% block stylesheets %}
{% endblock %}


{% block title %}
  Détails de la commande fournisseur du {{ commande.commande.date|date('d-mY') }}
{% endblock %}


{% block notifications %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Succès</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('warning') %}
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Attention !!!</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}



{% block body %}
    <h2>Détails commande fournisseur du {{ commande.commande.date|date('d-mY') }}</h2>
    <div class="row">
      <div class="col-md-6">
        <h3>Fournisseur</h3>
        <strong>Nom fournisseur:</strong>
        <span>{{ commande.provider.firstname }} {{ commande.provider.lastname }}</span><br>
        <strong>Adresse fournisseur:</strong>
        <span>{{ commande.provider.country.name }} {{ commande.provider.city }}</span><br>
        <strong>Numéro de téléphone fournisseur:</strong>
        <span>{{ commande.provider.phoneNumber }}</span><br>
        <strong>Email de téléphone fournisseur:</strong>
        <span>{{ commande.provider.email }}</span><br>
      </div>
      <div class="col-md-6">
        <h3>Charges</h3>
        <strong>Transport:</strong>
        <span>{{ commande.transport|number_format(0, ',', ' ') }} F CFA</span><br>
        <strong>Dédouanement:</strong>
        <span>{{ commande.dedouanement|number_format(0, ',', ' ') }} F CFA</span><br>
        <strong>Conversion de devises:</strong>
        <span>{{ commande.currencyCost|number_format(0, ',', ' ') }} F CFA</span><br>
        <strong>Frais pour le transitaire:</strong>
        <span>{{ commande.forwardingCost|number_format(0, ',', ' ') }} F CFA</span><br>
        <strong>Autres charges:</strong>
        <span>{{ commande.additionalFees|number_format(0, ',', ' ') }} F CFA</span><br>
      </div>
    </div><br><br>
    <div class="row">
      <div class="">
        <div class="table-responsive">
          {% set i = 0 %}
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix Unitaire</th>
                <th>Prix minimum</th>
                <th>Prix de vente</th>
              </tr>
            </thead>
            {% for item in commande.providerCommandeDetails %}
              {% set i = i + 1 %}
                <tbody>
                  <tr>
                    <td>{{ i }}</td>
                    <td>{{ item.product.category.name }} {{ item.product.mark.label }} - {{ item.product.description }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.unitPrice|number_format(0, ',', ' ') }} F CFA</td>
                    <td>{{ item.minimumSellingPrice|number_format(0, ',', ' ') }} F CFA</td>
                    <td>{{ item.fixedAmount|number_format(0, ',', ' ') }} F CFA</td>
                  </tr>
                </tbody>
            {% endfor %}
          </table>
        </div><br><br>
        <div class="row">
          <div class="col-lg-2 col-md-4 col-sm-6">
            <strong>Total des charges</strong><br>
            <span>{{ commande.totalFees|number_format(0, ',', ' ') }} F CFA</span>
          </div>
          <div class="col-lg-2 col-md-4 col-sm-6">
            <strong>Total des marchandises</strong><br>
            <span>{{ commande.commande.totalAmount|number_format(0, ',', ' ') }} F CFA</span>
          </div>
          <div class="col-lg-2 col-md-4 col-sm-6">
            <strong>Coût total de la commande</strong><br>
            <span>{{ commande.globalTotal|number_format(0, ',', ' ') }} F CFA</span>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
