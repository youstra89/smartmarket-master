<!DOCTYPE html>
<html>
    <head>
        <style>
            @font-face {
                font-family: 'Elegance';
                font-weight: normal;
                font-style: normal;
                font-variant: normal;
                src: url("http://eclecticgeek.com/dompdf/fonts/Elegance.ttf") format("truetype");
            }

            /** Define the margins of your page **/
            @page {
                margin: 100px 50px;
            }

            header {
                position: fixed;
                top: -60px;
                left: 0px;
                right: 0px;
                height: 50px;

                /** Extra personal styles **/
                color: gray;
                text-align: left;
                padding-left: 20px;
                font-size: .9em
            }

            footer {
                position: fixed; 
                bottom: -60px; 
                left: 0px; 
                right: 0px;
                height: 50px; 

                /** Extra personal styles **/
                color: darkGray;
                text-align: center;
                font-size: 0.5em;
            }

            table{
              width: 100%
            }

            table, th, td {
              /* border: 1px solid black; */
            }

            /* tr:nth-child(even) {background-color: #CCC}
            tr:nth-child(odd) {background-color: #FFF} */

            td{
              /* border: 1px solid black; */
              border-collapse: collapse;
              font-size: 1.2em
            }

            .numero{
              text-align: center;
            }

            .invoice-header{
            }

            .info-enterprise{
              width: 58%;
              display: inline-block;
              vertical-align : top;
              margin-top: 1px;
            }

            .info-customer{
              width: 40%;
              display: inline-block;
              float: right;
              vertical-align : top;
              margin-top: 1px;
            }

            .row{
              margin: 0px;
              padding: 0px;
              width: 100%;
            }

            .col{
              width: 32%;
              display: inline-block;
            }

            p{
              margin: 0px;
              padding: 5px;
            }

            .info{
              font-weight: bold;
            }

            tbody{
              font-size: .7em;
            }

            .title{
              text-align: center;
              font-family: 'Elegance';
              font-size: 1.3em;
              padding-top: 10px;
              margin-bottom: 0px;
              padding-bottom: 0px;
            }

            .settlement{
              width: 95%;
              font-size: 1em;
            }
        </style>
        <meta charset="UTF-8">
        <title>Facture de la vente N° {{ commande.reference }} | Smart Market</title>
    </head>
    <body>
        <header>
            {% if info is defined %}
              <strong>{{ info.nom }}</strong><br>
              {% if info.telephone is not empty %}
                Téléphone: {{ info.telephone }}<br>
              {% endif %}
              {% if info.email is not empty %}
                Email: {{ info.email }}<br>
              {% endif %}
              {% if info.siteWeb is not empty %}
                Site web: {{ info.siteWeb }}<br>
              {% endif %}
            {% else %}
              SmartMarket
            {% endif %}
            <hr width="75%">
        </header>

        <footer style="font-family: Elegance; line-height: 10px; font-size: 0.8em">
            <hr width="75%" style="align: left; border: solid black 2px">
          {% if info is defined %}
            {{ info.nom }} au capital de {{ info.capital|number_format(0, ',', ' ') }} F<br>
            {% if info.adresse is not empty %}
              Sise à {{ info.adresse }} <br>
            {% endif %}
            {% if info.numeroCompteBancaire is not empty %}
              Compte bancaire {{ info.numeroCompteBancaire }} <br>
            {% endif %}
            {% if info.registreCommerce is not empty %}
              RCM {{ info.registreCommerce }} <br>
            {% endif %}
          {% else %}
            Contacts: (00225) 07 31 09 99 - Email: contact.youstra@gmail.com
          {% endif %}
        </footer>
        <!-- Wrap the content of your PDF inside a main tag -->
        <main>
            {# <p style="page-break-after: always;">
                Content Page 1
            </p>
            <p style="page-break-after: never;">
                Content Page 2
            </p> #}
          <div class="content">
            <h1 class="title">
              Reçu N°{{ settlements|last.reference }} 
            </h1>
            <div class="reference">
              <div class="invoice-header">
                <div class="info-enterprise" style="">
                  <h2>Facture</h2>
                  <div class="reference-commande">
                  <strong>Date de facture:</strong>
                  <span>{{ commande.date|date('d-m-Y') }}</span><br>
                  <strong>N° de facture :</strong>
                  <span>{{ commande.reference }}</span><br>
                  <strong>Montant total:</strong>
                  <span>{{ commande.totalAmount|number_format(0, ',', ' ') }} F</span><br>
                  </div>
                </div>
                <div class="info-customer" style="">
                  <h2>A l'intention de </h2>
                  {% if commande.customer %}
                    <div class="reference-client">
                      <strong>Nom Client:</strong>
                      <span>{{ commande.customer.firstname }} {{ commande.customer.lastname }}</span><br>
                      <strong>Téléphone client:</strong>
                      <span>{{ commande.customer.phoneNumber }}</span><br>
                      <strong>Type du client:</strong>
                      <span>{{ commande.customer.type.type }}</span><br>
                    </div>
                  {% endif %}
                </div>
              </div><br><br>
            </div>
            <div class="table-responsive">
              {% set i = 0 %}
              <table class="table" cellspacing="0" border="0">
                <thead>
                  <tr>
                    <th>Réf</th>
                    <th>Désignation</th>
                    <th>Quantité</th>
                    <th>Prix Unitaire</th>
                    <th>Sous-total</th>
                  </tr>
                </thead>
                {% for item in commande.product %}
                  {% set i = i + 1 %}
                  {% set color = "" %}
                  {% if (i % 2) == 0 %}
                      {% set color = 'white' %}
                  {% else %}
                      {% set color = '#DCDCDC' %}
                  {% endif %}
                    <tbody>
                      <tr bgcolor="{{ color }}">
                        <td>{{ item.product.reference }}</td>
                        <td>{{ item.product.label }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.unitPrice|number_format(0, ',', ' ') }} F</td>
                        <td>{{ item.subtotal|number_format(0, ',', ' ') }} F</td>
                      </tr>
                    </tbody>
                {% endfor %}
                <tfoot>
                  <tr style="border: 1px solid black">
                    <td colspan="3">TOTAL</td>
                    <td colspan="2" bgcolor="#D3D3D3" style="align: center">{{ commande.totalAmount|number_format(0, ',', ' ') }} F</td>
                  </tr>
                </tfoot>
              </table>
            </div>
            {# On va déterminer le montant total des règlements effectués #}
            {% set totalPaye = 0 %}
            {% for item in settlements %}
              {% set totalPaye = totalPaye + item.amount %}
            {% endfor %}

            {# Ensuite, on détermine le reste à payer #}
            {% set resteAPayer = commande.totalAmount - totalPaye %}

            <h1>Détails règlements</h1>
            <div class="table-responsive">
              <table class="table settlement" cellspacing="0" border="0" style="font-size: 1.2em">
                <tbody>
                  <tr>
                    <th width="20%">Montant</th>
                    <th width="20%">Date du réglement</th>
                    <th width="20%">Enregistré par</th>
                    <th width="20%">Montant total payé</th>
                    <th width="20%">Reste à payer</th>
                  </tr>
                  <tr>
                    <td>{{ settlements|last.amount|number_format(0, ',', ' ') }} F</td>
                    <td>{{ settlements|last.date|date('d-m-Y') }}</td>
                    <td>{{ settlements|last.createdBy.username }}</td>
                    <td>{{ totalPaye|number_format(0, ',', ' ') }} F</td>
                    <td>
                      {% if commande.ended == true and resteAPayer == 0 %}
                        {% set commandeStatus = 'Soldée' %}
                      {% else %}
                        {{ resteAPayer|number_format(0, ',', ' ') }} F
                      {% endif %}
                    </td>
                  </tr>
                </tbody>
              </table>
            </div><br><br><br><br><br>
            <div class="row">
              <div style="text-align: right; font-style: italic">
                <p class="annee">Editée le <strong>{{ 'now'|date('d-m-Y') }}</strong> à <strong>{{ 'now'|date('H:i:s') }}</strong> par <strong>{{ app.user.username }}</strong></strong></p>
              </div>
            </div>
          </div>
        </main>
    </body>
</html>