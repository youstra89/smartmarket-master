{% extends 'base.html.twig' %}


{% block stylesheets %}
{% endblock %}


{% block title %}
  Détails de la vente du {{ commande.date|date('d-mY') }}
{% endblock %}


{% block notifications %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Succès</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('warning') %}
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Attention !!!</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}



{% block body %}
    <h2>Détails vente du {{ commande.reference }}</h2>
    <a href="javascript:history.back()" class="btn btn-primary btn-sm">Retour</a>
    <div class="row">
      <div class="col-md-4">
        <h3>Client</h3>
        {% if commande.customer is not empty %}
          <strong>Nom Client:</strong>
          <span>{{ commande.customer.firstname }} {{ commande.customer.lastname }}</span><br>
          <strong>Numéro de téléphone client:</strong>
          <span>{{ commande.customer.phoneNumber }}</span><br>
          <strong>Type du client:</strong>
          <span>{{ commande.customer.type.type }}</span><br>
        {% else %}
          Vente anomyne
        {% endif %}
      </div>
      <div class="col-md-4">
        <h3>Commande</h3>
        <strong>Date de la commande:</strong>
        <span>{{ commande.date|date('d-m-Y') }}</span><br>
        <strong>Référence:</strong>
        <span>{{ commande.reference }}</span><br>
        <strong>Montant total de la vente:</strong>
        <span>{{ commande.totalAmount|number_format(0, ',', ' ') }} F</span><br>
      </div>
      <div class="col-md-4">
        <h3>Opérations</h3>
        {% if is_granted("ROLE_ADMIN") and commande.returnedProducts is empty %}
          <a class="btn-sm btn-danger" href="{{ path('reset_sell', {id: commande.id}) }}">Retour de marchandises</a><br><br>
        {% endif %}
      <a class="btn-sm btn-info" href="{{ path('facture_client', {id: commande.id}) }}">Imprimer une facture</a><br>
      </div>
      {% set totalRetour = 0 %}
      {% if commande.returnedProducts is not empty %}
        <div class="col-md-4">
          <h3>Retour de marchandises</h3>
          {% for item in commande.returnedProducts %}
            {# {% for prod in commande.product if item.product.id == prod.id %} #}
              {# {% set totalRetour = totalRetour + (item.quantity * prod.unitPrice) %} #}
              <li>{{ item.quantity }} {{ item.product.label }}</li>
            {# {% endfor %} #}
          {% endfor %}
        </div>
      {% endif %}
    </div><br><br>
    <div class="row">
      <div class="">
        <div class="table-responsive">
          {% set i = 0 %}
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix Unitaire</th>
                <th>Sous-total</th>
              </tr>
            </thead>
            {% for item in commande.product %}
              {% set i = i + 1 %}
                <tbody>
                  <tr>
                    <td>{{ i }}</td>
                    <td>{{ item.product.label }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.unitPrice|number_format(0, ',', ' ') }} F</td>
                    <td>{{ item.subtotal|number_format(0, ',', ' ') }} F</td>
                  </tr>
                </tbody>
            {% endfor %}
          </table>
        </div><br><br>
        <div class="row">
          <div class="col-lg-3 col-md-4 col-sm-12">
            <h3>Règlements</h3>
            {% if commande.settlements is not empty %}
              {% set total = 0 %}
              <ul>
                {% for item in commande.settlements %}
                  {% set total = total + item.amount %}
                  <li>{{ item.commande.date|date('d-m-Y') }}: {{ item.amount|number_format(0, ',', ' ') }} F CFA</li>
                {% endfor %}
              </ul>
              <br>
              {% set rest = commande.totalAmount - total - totalRetour %}
              <p>Reste à Payer : {{ rest|number_format(0, ',', ' ') }} F CFA</p>
            {% endif %}
          </div>
        </div><br><br>
      </div>
    </div>
{% endblock %}
