{% extends 'base.html.twig' %}


{% block stylesheets %}
{% endblock %}


{% block title %}
  Détails de la vente du N° {{ commande.reference }} du {{ commande.date|date('d-m-Y') }}
{% endblock %}


{% block notifications %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Succès</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('warning') %}
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Attention !!!</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}



{% block body %}
    <h2>Détails vente N°<strong>{{ commande.reference }}</strong> du <strong>{{ commande.date|date('d-m-Y') }}</strong></h2>
    <a href="javascript:history.back()" class="btn btn-primary btn-sm">Retour</a>
    <div class="row">
      <div class="col-md-4">
        <h3>Client</h3>
        {% if commande.customer is not empty %}
          <strong>Nom Client:</strong>
          <span>{{ commande.customer.firstname }} {{ commande.customer.lastname }}</span><br>
          <strong>Numéro de téléphone client:</strong>
          <span>{{ commande.customer.phoneNumber }}</span><br>
          <strong>Type du client:</strong>
          <span>{{ commande.customer.type.type }}</span><br>
        {% else %}
          Vente anomyne
        {% endif %}
      </div>
      <div class="col-md-4">
        <h3>Commande</h3>
        <strong>Date de la commande:</strong>
        <span>{{ commande.date|date('d-m-Y') }}</span><br>
        <strong>Référence:</strong>
        <span>{{ commande.reference }}</span><br>
        <strong>Montant total:</strong>
        <span>{{ commande.totalAmount|number_format(0, ',', ' ') }} F</span><br>
        <strong>Vendu par:</strong>
        <span>{{ commande.createdBy.username }}</span><br>
        <strong>Vendu le:</strong>
        <span>{{ commande.createdAt|date('d-m-Y') }}</span><br>
      </div>
      <div class="col-md-4">
        <h3>Opérations</h3>
        {% if is_granted("ROLE_ADMIN") and commande.returnedProducts is empty %}
          <a class="btn-sm btn-danger" href="{{ path('reset_sell', {id: commande.id}) }}">Retour de marchandises</a><br><br>
        {% endif %}
        {% if is_granted("ROLE_ADMIN") and commande.settlements|length <= 1 and commande.date|date('d-m-Y') == 'now'|date('d-m-Y') %}
          <a class="btn-sm btn-info" href="{{ path('edit_sell', {id: commande.id}) }}">Modifier la commande</a><br><br>
        {% endif %}
      </div>
      {% set totalRetour = 0 %}
      {% if commande.returnedProducts is not empty %}
        <div class="col-md-4">
          <h3>Retour de marchandises</h3>
          {% for item in commande.returnedProducts %}
            {# {% for prod in commande.product if item.product.id == prod.id %} #}
              {# {% set totalRetour = totalRetour + (item.quantity * prod.unitPrice) %} #}
              <li>{{ item.quantity }} {{ item.product.label }}</li>
            {# {% endfor %} #}
          {% endfor %}
        </div>
      {% endif %}
    </div><br><br>
    <div class="row">
      <div class="">
        <div class="table-responsive">
          {% set i = 0 %}
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Référence</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix Unitaire</th>
                <th>Sous-total</th>
              </tr>
            </thead>
            <tbody>
              {% set total = 0 %}
              {% for item in commande.product %}
                {% set i = i + 1 %}
                {% set total = total + item.subtotal %}
                <tr>
                  <td>{{ i }}</td>
                  <td>{{ item.product.reference }}</td>
                  <td>{{ item.product.label }}</td>
                  <td>{{ item.quantity }}</td>
                  <td>{{ item.unitPrice|number_format(0, ',', ' ') }} F</td>
                  <td>{{ item.subtotal|number_format(0, ',', ' ') }} F</td>
                </tr>
              {% endfor %}
            </tbody>
            <tfoot>
              <tr>
                <th colspan="5">Montant total de la commande</th>
                <th>{{ total|number_format(0, ',', ' ') }} F</th>
              </tr>
            </tfoot>
          </table>
        </div><br><br>
        <div class="row">
          <div class="col-lg-6 col-md-8 col-sm-12">
            <h3>Règlements</h3>
            {% if commande.settlements is not empty %}
              {% set total = 0 %}
              <table width="100%">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Montant</th>
                    <th>Enregistré par</th>
                    <th>Enregistré le</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {% for item in commande.settlements %}
                    <tr>
                      {% set total = total + item.amount %}
                      <td>{{ item.date|date('d-m-Y') }}</td>
                      <td>{{ item.amount|number_format(0, ',', ' ') }} F</td>
                      <td>{{ item.createdBy.username }}</td>
                      <td>{{ item.createdAt|date('d-m-Y') }}</td>
                      <td>
                        <a href="{{ path('facture_client', {id: commande.id, settlementId: item.id}) }}" title="Imprimer une facture" style="font-size: 1.5em;"><i class="icon-file"></i></a>
                        {% if is_granted('ROLE_ADMIN') and commande.settlements|last == item %}
                          <a href="{{ path('edit_settlement', {id: item.id}) }}" title="Modifier le montant" style="font-size: 1.5em;"><i class="icon-edit"></i></a>
                        {% endif %}
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
              <br>
              {% if commande.ended == true %}
                <p>Soldée</p>
              {% else %}
                {% set rest = commande.totalAmount - total - totalRetour %}
                <p>Reste à Payer : {{ rest|number_format(0, ',', ' ') }} F</p>
              {% endif %}
            {% endif %}
          </div>
        </div><br><br>
      </div>
    </div>
{% endblock %}
