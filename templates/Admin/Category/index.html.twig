{% extends 'base.html.twig' %}


{% block title %}Les catégories{% endblock %}


{% block stylesheets %}
    <link href="{{ asset('datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
{% endblock %}


{% block notifications %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Succès</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('warning') %}
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Attention !!!</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}


{% block body %}
  <a href="javascript:history.back()" class="btn btn-primary sm">Retour</a><br><br>
  <h2 class="fh5co animate-box" data-animate-effect="fadeInLeft">Catégories</h2>
  <a href="{{ path('category.add') }}" class="btn-sm btn-primary">Ajouter une nouvelle catégorie</a><br><br>
  <div class="table-responsive">
    <table class="table table-borderless" id="dataTable" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>N°</th>
          <th>Catégorie</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>N°</th>
          <th>Catégorie</th>
          <th>Actions</th>
        </tr>
      </tfoot>
      <tbody>
        {% set i = 0 %}
        {% for category in categories %}
          {% set i = i + 1 %}
          <tr>
            <td>{{ i }}</td>
            <td>{{ category.name }}</td>
            <td>
              <a href="{{ path('category.edit', {id: category.id}) }}" title="Modifier cette catégorie"><i class="icon-edit"></i></a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}


{% block javascript %}
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-easing/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('js/datatables-demo.js') }}"></script>
{% endblock %}
