{% extends 'base.html.twig' %}

{% block title %}Comptabilité - Les débits{% endblock %}


{% block notification %}
{% endblock %}


{% block body %}
<div class="banner-area">
  <div class="container">
    <div class="row justify-content-center generic-height align-items-center mb-3">
      <div class="col-lg-10">
        <a href="javascript:history.back()" class="genric-btn success circle arrow small">
          <span class="lnr lnr-arrow-left"></span>&nbsp;Retour
        </a><br><br>
        <div class="row">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Date</th>
                <th>Client</th>
                <th>Montant</th>
                <th>Reste</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {% set i = 0 %}
              {% for vente in ventes %}
                {% set i = i + 1 %}
                <tr>
                  <td>{{ i }}</td>
                  <td>{{ vente.commande.date|date('d-m-Y') }}</td>
                  <td>
                    {% if vente.customer is empty %}
                      Aucun règlement effectué
                    {% else %}
                      {{ vente.customer.firstname }} {{ vente.customer.lastname }} ({{ vente.customer.phoneNumber }})
                    {% endif %}
                  </td>
                  <td>{{ vente.commande.totalAmount|number_format(0, ',', ' ') }} F CFA</td>
                  <td>
                    {% set total = 0 %}
                    {% for item in vente.commande.settlements %}
                      {% set total = total + item.amount %}
                    {% endfor %}
                    {{ (vente.commande.totalAmount - total)|number_format(0, ',', ' ') }} F CFA</td>
                  <td>
                    <a href="{{ path('customer.order.details', {'id': vente.id}) }}" class=" circle arrow small">Plus de détails</a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
