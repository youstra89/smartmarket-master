{% extends 'base.html.twig' %}

{% block title %}Comptabilité - Les débits{% endblock %}


{% block notification %}
{% endblock %}


{% block body %}
<div class="fh5co-narrow-content">
  <div class="row justify-content-center generic-height align-items-center mb-3">
    <div class="col-lg-10">
      <a href="javascript:history.back()" class="btn btn-primary">
        <span class="lnr lnr-arrow-left"></span>&nbsp;Retour
      </a><br><br>
      <h2 class="fh5co animate-box" data-animate-effect="fadeInLeft">Les dettes en cours</h2>
      <div class="row">
        <table class="table table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>Date</th>
              <th>Client</th>
              <th>Montant</th>
              <th>Reste</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% set i = 0 %}
            {% set totalGeneral = 0 %}
            {% for vente in ventes %}
              {% set i = i + 1 %}
              <tr>
                <td>{{ i }}</td>
                <td>{{ vente.date|date('d-m-Y') }}</td>
                <td>
                  {% if vente.customer is empty %}
                    Aucun règlement effectué
                  {% else %}
                    {{ vente.customer.firstname }} {{ vente.customer.lastname }} ({{ vente.customer.phoneNumber }})
                  {% endif %}
                </td>
                <td>{{ vente.totalAmount|number_format(0, ',', ' ') }} F</td>
                <td>
                  {% set total = 0 %}
                  {% for item in vente.settlements %}
                    {% set total = total + item.amount %}
                  {% endfor %}
                  {% set dette = vente.totalAmount - total %}
                  {% set totalGeneral = totalGeneral + dette %}
                  {{ dette|number_format(0, ',', ' ') }} F</td>
                <td>
                  <a href="{{ path('customer.order.details', {'id': vente.id}) }}" class=" circle arrow small">Plus de détails</a>
                  {% if vente.ended == false %}
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('settlement', {id: vente.id}) }}"data-toggle="tooltip" title="Enregistrer un règlement"><i class="icon-plus"></i></a>
                      {% endif %}
                </td>
              </tr>
            {% endfor %}
          </tbody>
          <tfoot>
            <tr>
              <td colspan="4">Total de toutes les dettes</td>
              <td>{{ totalGeneral|number_format(0, ',', ' ') }} F</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock %}
