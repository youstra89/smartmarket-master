{% extends 'base.html.twig' %}


{% block stylesheets %}
{% endblock %}


{% block title %}
  Enregistrement du prix minimum de vente de la commande fournisseur du {{ commande.date|date('d-mY') }}
{% endblock %}


{% block notifications %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Succès</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('warning') %}
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Attention !!!</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}



{% block body %}
    <h2>Enregistrement du prix minimum de vente de la commande N°{{ commande.reference }} fournisseur du {{ commande.date|date('d-m-Y') }}</h2>
    <section class="contact-area container">
        <form class="ui form" action="" method="post">
            {% set i = 0 %}
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Produit</th>
                  <th>Quantité</th>
                  <th>Prix Unitaire</th>
                  <th>Prix de revient</th>
                  <th>Prix de vente</th>
                  <th>Marge bénéficiaire</th>
                </tr>
              </thead>
              {% for item in commande.providerCommandeDetails %}
                {% set i = i + 1 %}
                  <tbody>
                    <tr>
                      <td>{{ i }}</td>
                      <td>{{ item.product.label }}</td>
                      <td>{{ item.quantity }}</td>
                      <td>{{ item.unitPrice|number_format(0, ',', ' ') }} F</td>
                      <td>{{ item.minimumSellingPrice|number_format(0, ',', ' ') }} F</td>
                      <td>{{ item.product.unitPrice|number_format(0, ',', ' ') }} F</td>
                      <td>
                        <input type="number" class="price" id="price[{{ item.id }}]" name="price[{{ item.id }}]" value="{{ item.product.unitPrice - item.minimumSellingPrice }}" required>
                      </td>
                    </tr>
                  </tbody>
              {% endfor %}
            </table>
            <input type="hidden" name="token" value="{{ csrf_token('prix_de_vente') }}"/>
            <button class="btn btn-success btn-sm" onclick="submitForm(this);">{{ button|default('Enregistrer') }}</button><br><br>
        </form>
    </section>
{% endblock %}

{% block javascript %}
  <script>
    function submitForm(btn) {
        // disable the button
        btn.disabled = true;
        // submit the form    
        btn.form.submit();
    }
  </script>
{% endblock %}
