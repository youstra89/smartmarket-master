<section class="contact-area container">
    <form class="ui form" action="" method="post">
        {% set i = 0 %}
        <table class="table">
          <thead>
            <tr>
              <td>#</td>
              <td>Produit</td>
              <td>Quantit√©</td>
              <td>Prix Unitaire</td>
              <td>Sous total</td>
            </tr>
          </thead>
          {% set total = 0 %}
          {% for product in products %}
            {% set i = i + 1 %}
            {% set total = total + product.purchasingPrice %}
              <tbody>
                <tr>
                  <td>
                    {{ i }}
                  </td>
                  <td>
                    {{ product.category.name }} {{ product.mark.label }} - {{ product.description }}
                  </td>
                  <td>
                    <input type="number" class="quantity" id="quantity[{{ product.id }}]" name="{{ product.id }}" value="1" required>
                    <input type="hidden" name="quantityH[{{ product.id }}]"  id="quantityH[{{ product.id }}]" value="1">
                  </td>
                  <td>
                    <input type="number" class="price" id="price[{{ product.id }}]" name="{{ product.id }}" value="{{ product.purchasingPrice }}" required>
                    <input type="hidden" name="priceH[{{ product.id }}]" id="priceH[{{ product.id }}]" value="{{ product.purchasingPrice }}">
                  </td>
                  <td>
                    <input type="number" class="sousTotal" id="sousTotal[{{ product.id }}]" name="sousTotal[{{ product.id }}]" value="{{ product.purchasingPrice }}" readonly>
                  </td>
                </tr>
              </tbody>
          {% endfor %}
          <tfoot>
            <tr>
              <td colspan="4"><h4>Total de la commande</h4></td>
              <td><h4><input type="text" id="total" name="total" value="{{ total }}" readonly></h4></td>
            </tr>
          </tfoot>
        </table>
        <input type="hidden" name="token" value="{{ csrf_token('achat') }}"/>
        <button class="btn btn-primary" onclick="submitForm(this);">{{ button|default('Enregistrer') }}</button><br><br>
    </form>
</section>
