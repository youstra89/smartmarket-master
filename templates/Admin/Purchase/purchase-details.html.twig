{% extends 'base.html.twig' %}


{% block stylesheets %}
{% endblock %}


{% block title %}
  Détails de la commande fournisseur N°{{ commande.reference }} du {{ commande.date|date('d-m-Y') }}
{% endblock %}


{% block notifications %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Succès</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('warning') %}
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Attention !!!</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}



{% block body %}
    <h2>Détails commande fournisseur N°{{ commande.reference }} du {{ commande.date|date('d-m-Y') }}</h2>
    <a href="javascript:history.back()" class="btn btn-primary btn-sm">Retour</a>
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-6">
        <span style="font-weight: bold; font-size: 2em">Charges</span><br>
        <strong>Transport:</strong>
        <span>{{ commande.transport|number_format(0, ',', ' ') }} F CFA</span><br>
        <strong>Dédouanement:</strong>
        <span>{{ commande.dedouanement|number_format(0, ',', ' ') }} F CFA</span><br>
        <strong>Conversion de devises:</strong>
        <span>{{ commande.currencyCost|number_format(0, ',', ' ') }} F CFA</span><br>
        <strong>Frais pour le transitaire:</strong>
        <span>{{ commande.forwardingCost|number_format(0, ',', ' ') }} F CFA</span><br>
        <strong>Autres charges:</strong>
        <span>{{ commande.additionalFees|number_format(0, ',', ' ') }} F CFA</span><br>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-6">
        <span style="font-weight: bold; font-size: 2em">Fournisseur</span><br>
        <strong>Nom fournisseur:</strong>
        <span>{{ commande.provider.firstname }} {{ commande.provider.lastname }}</span><br>
        <strong>Adresse fournisseur:</strong>
        <span>{{ commande.provider.country.name }} {{ commande.provider.city }}</span><br>
        <strong>Numéro de téléphone fournisseur:</strong>
        <span>{{ commande.provider.phoneNumber }}</span><br>
        <strong>Email fournisseur:</strong>
        <span>{{ commande.provider.email }}</span><br>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-6">
        <span style="font-weight: bold; font-size: 2em">Bilan commande</span><br>
        <strong>Nombre de produit:</strong>
        <span>{{ commande.providerCommandeDetails|length }} </span><br>
        <strong>Total des charges</strong>
        <span>{{ commande.totalFees|number_format(0, ',', ' ') }} F CFA</span><br>
        <strong>Coût total de la commande:</strong>
        <span>{{ commande.globalTotal|number_format(0, ',', ' ') }} F CFA</span><br>
      </div>
    </div><br><br>
    <div class="row">
      <div class="">
        <div class="table-responsive">
          {% set i = 0 %}
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix Unitaire</th>
                <th>Prix de revient</th>
                <th>Prix de vente</th>
              </tr>
            </thead>
            {% for item in commande.providerCommandeDetails %}
              {% set i = i + 1 %}
                <tbody>
                  <tr>
                    <td>{{ i }}</td>
                    <td>{{ item.product.category.name }} {{ item.product.mark.label }} - {{ item.product.description }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.unitPrice|number_format(0, ',', ' ') }} F CFA</td>
                    <td>{{ item.minimumSellingPrice|number_format(0, ',', ' ') }} F CFA</td>
                    <td>{{ item.fixedAmount|number_format(0, ',', ' ') }} F CFA</td>
                  </tr>
                </tbody>
            {% endfor %}
            <tfoot>
              <tr>
                <th colspan="3">Total des marchandises</th>
                <th><span>{{ commande.totalAmount|number_format(0, ',', ' ') }} F CFA</span></th>
              </tr>
            </tfoot>
          </table>
        </div><br>
      </div>
    </div>
{% endblock %}
