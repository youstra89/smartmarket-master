	<body>
	<h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">Panel Admin</h2>
	<form action="" method="post">
		{% set number = 10 %}
		{% for i in 0..number %}
			<div class="row">
				<div class="col-md-8">
					<div class="row">
						<div class="col-md-3">
							<label for="families[{{i}}]">Famille</label><br>
							<select name="families[{{i}}]" id="families[{{i}}]" class="mb-4 js-example-basic-single" required>
							<option value="">Sélectionner une famille</option>
							{% for family in families %}
								<option value="{{ family.id }}">{{ family.label }}</option>
							{% endfor %}
							</select>
						</div>
						<div class="col-md-3">
							<label for="categories[{{i}}]">Catégorie</label><br>
							<select name="categories[{{i}}]" id="categories[{{i}}]" class="mb-4 js-example-basic-single" required>
							<option value="">Sélectionner une catégorie</option>
							{% for category in categories %}
								<option value="{{ category.id }}">{{ category.name }}</option>
							{% endfor %}
							</select>
						</div>
						<div class="col-md-3">
							<label for="marks[{{i}}]">Marque</label><br>
							<select name="marks[{{i}}]" id="marks[{{i}}]" class="mb-4 js-example-basic-single" required>
							<option value="">Sélectionner une marque</option>
							{% for mark in marks %}
								<option value="{{ mark.id }}">{{ mark.label }}</option>
							{% endfor %}
							</select>
						</div>
						<div class="col-md-3">
							<label for="descriptions[{{i}}]">Description</label><br>
							<input type="text" name="descriptions[{{i}}]" id="descriptions[{{i}}]" required>
						</div>
					</div>
				</div>
				<div class="form-group col-md-4">
					<div class="row">
						<div class="col-md-3">
							<label for="stocks[{{i}}]">Stock</label>
							<input type="number" name="stocks[{{i}}]" id="stocks[{{i}}]" required size="10" [b] style="width: 100px" [b]>
						</div>
						<div class="col-md-3">
					<label for="purchasing_prices[{{i}}]">Prix d'achat</label>
					<input type="number" name="purchasing_prices[{{i}}]" id="purchasing_prices[{{i}}]" required size="10" [b] style="width: 100px" [b]>
						</div>
						<div class="col-md-3">
					<label for="selling_prices[{{i}}]">Prix de vente</label>
					<input type="number" name="selling_prices[{{i}}]" id="selling_prices[{{i}}]" required size="10" [b] style="width: 100px" [b]>
						</div>
						<div class="col-md-3">
					<label for="unites[{{i}}]">Unités/carton</label><br>
					<input type="number" name="unites[{{i}}]" id="unites[{{i}}]" value="1" required size="10" [b] style="width: 100px" [b]>
						</div>
					</div>
				</div>
			</div>
			<hr style="border: solid grey 1px; text-align: center; width: 100%; margin: 3px">
		{% endfor %}
		<input type="hidden" name="token" value="{{ csrf_token('insert_products') }}"/>
		<input type="submit" class="btn-default btn-lg" id="save" value="Enregistrer" onclick="submitForm(this);">
	</form>

	<!-- jQuery -->
	<script src="{{ asset('js/jquery.min.js') }}"></script>
