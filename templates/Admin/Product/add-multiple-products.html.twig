	<script src="{{ asset('js/main.js') }}"></script>
	<script src="{{ asset('js/select2.min.js') }}"></script>
	<script>
		function submitForm(btn) {
			// disable the button
			btn.disabled = true;
			// submit the form    
			btn.form.submit();
		}

		$(document).ready(function() {
			$('.js-example-basic-single').select2();
		});
	</script>
