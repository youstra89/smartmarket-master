{% extends 'base.html.twig' %}


{% block title %}Les marchandises{% endblock %}


{% block stylesheets %}
    <link href="{{ asset('datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
{% endblock %}


{% block notifications %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Succès</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('warning') %}
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Attention !!!</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}


{% block body %}
  <div class="fh5co-narrow-content">
    <h2 class="fh5co animate-box" data-animate-effect="fadeInLeft">Marchandises</h2>
    {% if is_granted('ROLE_ADMIN') %}
      <a href="{{ path('mark') }}" class="btn-primary btn-sm">Gestion des marques de produits</a>
      <a href="{{ path('category') }}" class="btn-primary btn-sm">Gestion des catégories</a>
      <a href="{{ path('product.add') }}" class="btn-primary btn-sm">Ajouter une marchandise</a>
      <a href="{{ path('impression_inventaire') }}" class="btn-primary btn-sm">Impression</a><br><br>
    {% endif %}
    <div class="table-responsive">
        <table class="table table-borderless" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>N°</th>
              <th>Référence</th>
              <th>Catégorie</th>
              <th>Marque</th>
              <th>Description</th>
              <th>Stock</th>
              <th>Prix unitaire</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>N°</th>
              <th>Référence</th>
              <th>Catégorie</th>
              <th>Marque</th>
              <th>Description</th>
              <th>Stock</th>
              <th>Prix unitaire</th>
              <th>Actions</th>
            </tr>
          </tfoot>
          <tbody>
            {% set i = 0 %}
            {% for product in products %}
              {% set i = i + 1 %}
              <tr {% if product.stock < product.securityStock %}class="bg-danger"{% endif %}>
                <td>{{ i }}</td>
                <td>{{ product.reference }}</td>
                <td>{{ product.category.name }}</td>
                <td>{% if product.mark %} {{ product.mark.label }} {% endif %}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.unitPrice|number_format(0, ',', ' ') }} F CFA</td>
                <td>
                  <a href="{{ path('product.edit', {id: product.id}) }}" title="Modifier ce produit"><i class="icon-edit"></i></a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascript %}
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-easing/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('js/datatables-demo.js') }}"></script>
{% endblock %}
