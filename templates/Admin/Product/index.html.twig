{% extends 'base-admin.html.twig' %}


{% block title %}Les marchandises{% endblock %}


{% block notifications %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Succès</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('warning') %}
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Attention !!!</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}


{% block body %}
  <div class="fh5co-narrow-content">
    <h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">Marchandises</h2>
    <a href="{{ path('category') }}" class="btn btn-primary">Gestion des catégories</a>
    <a href="{{ path('product.add') }}" class="btn btn-primary">Ajouter une marchandise</a>
    <div class="row">
      {{ form_start(form) }}
      <div class="row">
        <div class="col-md-4">
          {{ form_row(form.category, {'attr': {'class': 'form-control mb-4'}}) }}
        </div>
        <div class="col-md-4">
          {{ form_row(form.mark, { 'attr': {'class': 'form-control mb-4'} }) }}
        </div>
        <div class="col-md-4">
          {{ form_row(form.description, { 'attr': {'class': 'form-control mb-4'} }) }}
        </div>
        <div class="col-md-4"><br>
          <button type="submit" class="btn btn-success btn-sm">{{ 'Rechercher'|trans }}</button>
        </div>
      </div>
      {{ form_end(form) }}
    </div>
    <div class="row row-bottom-padded-md">
      {% for product in products %}
          <div class="col-md-3 col-sm-6 col-padding animate-box" data-animate-effect="fadeInLeft">
            <div class="blog-entry">
              <a href="#" class="blog-img"><img src="{{ asset('images/img-1.jpg') }}" class="img-responsive" alt="Free HTML5 Bootstrap Template by FreeHTML5.co"></a>
              <div class="desc">
                <h3><a href="#">{{ product.mark.label }} {{ product.description }}</a></h3>
                <span>{{ product.category.name }}</span>
                <p>Produit disponible en <strong>{{ product.stock }}</strong> exemplaire(s)</p>
                <a href="{{ path('product.edit', {id: product.id}) }}" class="lead">Modifier<i class="icon-arrow-right3"></i></a>
              </div>
            </div>
          </div>
      {% endfor %}
    </div>
    <div class="row">
      <div class="navigation">
        {{ knp_pagination_render(products) }}
      </div>
    </div>
    </div>
  </div>
{% endblock %}
