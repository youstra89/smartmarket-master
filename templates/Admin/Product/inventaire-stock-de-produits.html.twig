<!DOCTYPE html>
<html>
    <head>
        <style>
            @font-face {
                font-family: 'Elegance';
                font-weight: normal;
                font-style: normal;
                font-variant: normal;
                src: url("http://eclecticgeek.com/dompdf/fonts/Elegance.ttf") format("truetype");
            }

            table{
              width: 95%
            }

            table, th, td {
              border: 1px solid black;
            }

            td{
              border: 1px solid black;
              border-collapse: collapse;
              font-size: 1.2em
            }

            .numero{
              text-align: center;
            }

            .row{
              margin: 0px;
              padding: 0px;
              width: 100%;
            }

            .col{
              width: 32%;
              display: inline-block;
            }

            p{
              margin: 0px;
              padding: 5px;
            }

            .info{
              font-weight: bold;
            }

            tbody{
              font-size: .7em;
            }

            /* body{
              display: flex;
              flex-direction: column-reverse;
            } */
        </style>
        <meta charset="UTF-8">
        <title>Inventaire du stock {{ 'now'|date('d-m-Y H:i:s') }} | Smart Market</title>
    </head>
    <body>
        <div class="title-form">
          <h1 class="title">Liste des produits</h3>
        </div>
        <div class="reference">
          <div class="row">
            <div class="col">
              <p class="annee">Date : {{ 'now'|date('d-m-Y H:i:s') }}<span class="info"></span></p>
            </div>
            <div class="col">
            </div>
            <div class="col">
            </div>
          </div>
        </div>
        <div class="content">
          <table cellspacing="0">
            <thead>
              <tr>
                <th class="numero">N°</th>
                <th class="">Référence</th>
                <th class="">Désignation</th>
                <th class="">Stock</th>
                <th class="">Prix de vente</th>
                <th class="">Sous-total</th>
              </tr>
            </thead>
            <tbody>
              {% set i = 0 %}
              {% set total = 0 %}
              {% for product in products %}
                {% set i = i + 1 %}
                {% set sousTotal = product.stock * product.unitPrice %}
                {% set total = total + sousTotal %}
                <tr>
                  <td class="numero">{{ i }}</td>
                  <td>{{ product.reference }}</td>
                  {% set nom = product.label %}
                  {% if nom|length > 30 %}
                    {% set nom = nom|slice(0, 30) ~ '.' %}
                  {% endif %}
                  <td>{{ product.label }}</td>
                  <td>{{ product.stock }}</td>
                  <td>{{ product.unitPrice|number_format(0, ',', ' ') }} F</td>
                  <td>{{ sousTotal|number_format(0, ',', ' ') }} F</td>
                </tr>
              {% endfor %}
            </tbody>
            <tfoot>
              <tr>
                <th colspan="5">Total</th>
                <th>{{ total|number_format(0, ',', ' ') }} F</th>
              </tr>
            </tfoot>
          </table>
        </div>
    </body>
</html>