{{ form_start(form, {'attr': {'class': ''}}) }}
    <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label for="">{{ form_label(form.reference) }}</label>
            {{ form_widget(form.reference, {'attr': {'class': 'form-control', 'value': reference}}) }}
          </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="">{{ form_label(form.firstname) }}</label>
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="">{{ form_label(form.lastname) }}</label>
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="">{{ form_label(form.phone_number) }}</label>
                {{ form_widget(form.phone_number, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">{{ form_label(form.email) }}</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="">{{ form_label(form.country) }}</label>
                {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">{{ form_label(form.city) }}</label>
                {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="">{{ form_label(form.nationalite) }}</label>
                {{ form_widget(form.nationalite, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">{{ form_label(form.numero_compte_bancaire) }}</label>
                {{ form_widget(form.numero_compte_bancaire, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            {{ form_label(form.acompte) }}
            {{ form_widget(form.acompte, {'attr': {'class': 'form-control', 'placeholder': 'Ce champ est obligatoire. S\'il n\'a pas de valeur, veuillez mettre 0'}}) }}
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            {{ form_label(form.arriere_initial) }}
            {{ form_widget(form.arriere_initial, {'attr': {'class': 'form-control', 'placeholder': 'Ce champ est obligatoire. S\'il n\'a pas de valeur, veuillez mettre 0'}}) }}
          </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            {{ form_label(form.observation) }}
            {{ form_widget(form.observation, {'attr': {'class': 'form-control', 'placeholder':'Vous pouvez prendre des notes sur vos fournisseurs'}}) }}
          </div>
        </div>
    </div>
    <button class="btn-lg btn-default" onclick="submitForm(this);">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}
