{% extends 'base.html.twig' %}


{% block title %}Les clients{% endblock %}


{% block stylesheets %}
    <link href="{{ asset('datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
    <style>
      .table{
        table-layout: auto;
        width: 200%;
      }
    </style>
{% endblock %}


{% block notifications %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Succès</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('warning') %}
    <div class="alert alert-warning fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Attention !!!</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <strong>Erreur</strong><br>
      {{ message|raw }}
    </div>
  {% endfor %}
{% endblock %}


{% block body %}
  <a href="javascript:history.back()" class="btn btn-primary">Retour</a><br><br>
  <h2 class="fh5co animate-box" data-animate-effect="fadeInLeft">Clients</h2>
  <a href="{{ path('customer.add') }}" class="btn-sm btn-primary">Ajouter un client</a>
  <a href="{{ path('impression_customers') }}" class="btn-sm btn-primary">Liste des clients</a>
  <a href="{{ path('customertypes') }}" class="btn-sm btn-primary">Gestion des types de client</a><br><br>
  <div class="table-responsive">
    <table class="table table-borderless" id="dataTable" cellspacing="0">
      <thead>
        <tr>
          <th>N°</th>
          <th>Référence</th>
          <th>Civilité</th>
          <th>Nom</th>
          <th>Prénom</th>
          <th>Sexe</th>
          <th>Téléphone</th>
          <th>Email</th>
          <th>Type</th>
          <th>Solde</th>
          <th>Nationalite</th>
          <th>Profession</th>
          <th>Date de naissance</th>
          <th>Lieu de naissance</th>
          <th>Nature pièce</th>
          <th>Numéro pièce</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>N°</th>
          <th>Référence</th>
          <th>Civilité</th>
          <th>Nom</th>
          <th>Prénom</th>
          <th>Sexe</th>
          <th>Téléphone</th>
          <th>Email</th>
          <th>Type</th>
          <th>Solde</th>
          <th>Nationalite</th>
          <th>Profession</th>
          <th>Date de naissance</th>
          <th>Lieu de naissance</th>
          <th>Nature pièce</th>
          <th>Numéro pièce</th>
          <th>Actions</th>
        </tr>
      </tfoot>
      <tbody>
        {% set i = 0 %}
        {% for customer in customers %}
          {% set i = i + 1 %}
          <tr>
            <td>{{ i }}</td>
            <td>{{ customer.reference }}</td>
            <td>{{ customer.civilite }}</td>
            <td>{{ customer.lastname }}</td>
            <td>{{ customer.firstname }}</td>
            <td>{{ customer.sexeType }}</td>
            <td>{{ customer.phoneNumber }}</td>
            <td>{{ customer.email }}</td>
            <td>
              {% if customer.type %}
                {{ customer.type.type }}
              {% endif %}
            </td>
            <td>{{ customer.solde|number_format(0, ',', ' ') }} F</td>
            <td>{{ customer.nationalite }}</td>
            <td>{{ customer.profession }}</td>
            <td>{{ customer.dateNaissance|date("d-m-Y") }}</td>
            <td>{{ customer.lieuNaissance }}</td>
            <td>{{ customer.naturePieceIdentite }}</td>
            <td>{{ customer.numeroPieceIdentite }}</td>
            <td>
              <a href="{{ path('customer.edit', {id: customer.id}) }}" title="Modifier info client"><i class="icon-edit"></i></a>&nbsp;&nbsp;&nbsp;
              {# <a href="{{ path('prepare_sell_for_customer', {id: customer.id}) }}" title="Préparer une commande"><i class="icon-plus"></i></a>&nbsp;&nbsp;&nbsp; #}
              <a href="{{ path('customer_info', {id: customer.id}) }}" title="Voir les détails"><i class="icon-params"></i></a>&nbsp;&nbsp;&nbsp;
              <a href="{{ path('ajouter_acompte_clients', {id: customer.id}) }}" title="Recevoir un acompte de ce client"><i class="icon-xing"></i></a>&nbsp;&nbsp;&nbsp;
              {% if customer.creanceInitiale > 0 %}
                <a href="{{ path('paiement_creance_initiale', {id: customer.id}) }}" title="Règelement créance initiale"><i class="icon-time"></i></a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}


{% block javascript %}
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-easing/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('js/datatables-demo.js') }}"></script>
{% endblock %}
