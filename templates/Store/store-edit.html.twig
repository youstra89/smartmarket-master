{% extends 'base.html.twig' %}


{% block title %}Mise à jour du dépôt {{ store.name }} - {{ store.localisation }}{% endblock %}


{% block stylesheets %}
  <style>
    label.required:before{
      content: "* ";
    }
  </style>
{% endblock %}


{% block notifications %}{% endblock %}


{% block body %}
  <a href="javascript:history.back()" class="btn btn-primary">Retour</a><br><br>
  <h2 class="fh5co animate-box" data-animate-effect="fadeInLeft">Mise à jour du dépôt <strong>{{ store.name }} - {{ store.localisation }}</strong></h2>
  <form action="" method="post">
    <div class="row">
      <div class="form-group col-md-4">
        <label for="name" class="required">Nom</label>
        <input type="text" name="name" id="name" value="{{ store.name }}" class="form-control" placeholder="Nom du dépôt" required>
      </div>
      <div class="form-group col-md-4">
        <label for="localisation">Localisation</label>
        <input type="text" name="localisation" id="localisation" value="{{ store.localisation }}" class="form-control" placeholder="Localisation du dépôt">
      </div>
      <div class="form-group col-md-4">
        <label for="number">Contacts</label>
        <input type="text" name="number" id="number" value="{{ store.phoneNumber }}" class="form-control" placeholder="Contacts du dépôt">
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-12">
        <label for="comment">Description/Commentaire</label>
        <input type="text" name="comment" id="comment" value="{{ store.comment }}" class="form-control" placeholder="Vous pouvez laisser un commentaire ou une description sur le dépôt">
      </div>
    </div>
    <div class="row form-group">
      <input type="hidden" name="token" value="{{ csrf_token('mise_a_jour_de_depot') }}"/>
      <button class="btn-lg btn-success" onclick="submitForm(this);">{{ button|default('Appliquer les changements') }}</button>
    </div>
  </form>
{% endblock %}
