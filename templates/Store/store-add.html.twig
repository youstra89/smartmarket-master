{% extends 'base.html.twig' %}


{% block title %}Enregistrement d'un nouveau dépôt{% endblock %}


{% block stylesheets %}
  <style>
    label.required:before{
      content: "* ";
    }
  </style>
{% endblock %}


{% block notifications %}{% endblock %}


{% block body %}
  <a href="javascript:history.back()" class="btn btn-primary">Retour</a><br><br>
  <h2 class="fh5co animate-box" data-animate-effect="fadeInLeft">Enregistrement d'un nouveau dépôt</h2>
  <form action="" method="post">
    <div class="row">
      <div class="form-group col-md-4">
        <label for="name" class="required">Nom</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Nom du dépôt" required>
      </div>
      <div class="form-group col-md-4">
        <label for="localisation">Localisation</label>
        <input type="text" name="localisation" id="localisation" class="form-control" placeholder="Localisation du dépôt">
      </div>
      <div class="form-group col-md-4">
        <label for="number">Contacts</label>
        <input type="text" name="number" id="number" class="form-control" placeholder="Contacts du dépôt">
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-12">
        <label for="comment">Description/Commentaire</label>
        <input type="text" name="comment" id="comment" class="form-control" placeholder="Vous pouvez laisser un commentaire ou une description sur le dépôt">
      </div>
    </div>
    <div class="row form-group">
      <input type="hidden" name="token" value="{{ csrf_token('enregistrement_de_depot') }}"/>
      <button class="btn-lg btn-default" onclick="submitForm(this);">{{ button|default('Enregistrer') }}</button>
    </div>
  </form>
{% endblock %}
